extends layout

block header
  #legend
    ul
      if session.email
        li
          #watched-legend-item.legend-item
          span= videoSlugsWatched.length
          |  Completed
      li
        #unwatched-legend-item.legend-item
        span= stats.available - videoSlugsWatched.length
        |  Available
      li
        #unavailable-legend-item.legend-item
        span= stats.unavailable
        |  Coming Soon

mixin video_list(category)
  ul.videos
    each video in category.videos
      if !tagged || video.tags.indexOf(tagged) != -1
        if video.type == 'video' && !exercisesOnly
          li.video
            if video.youtubeid
              a(name= category.slug + '/' + video.slug)
              a(href= '/video/' + video.slug, name= video.slug)
                if videoSlugsWatched.indexOf(video.slug) != -1
                  span.completed= video.title
                else
                  span= video.title
            else
              span= video.title
        else if video.type == 'exercise' && !videosOnly
          li.exercise
            if video.assertions
              a(name= category.slug + '/' + video.slug)
              a(href= '/exercise/' + video.slug, name= video.slug)
                if videoSlugsWatched.indexOf(video.slug) != -1
                  span.completed= video.title
                else
                  span= video.title
            else
              span= video.title

block mainContent
  if !tagged
    each category in categories
      .card-container
        a(name= category.slug)
        h1= category.title
        +video_list(category)
  else
    .card-container
      h1= 'Tagged: ' + tagged
      each category in categories
        +video_list(category)

