doctype 5
html(lang="en")
  head
    title= pageTitle
    //link(rel='alternate', type='application/rss+xml', title='RSS' href='/feeds/rss/')
    link(rel='shortcut icon' href='/static/img/favicon.ico')
    link(rel='stylesheet', type='text/css', href='/static/css/main.css')
    link(href='//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.css', rel='stylesheet')

  body(id= bodyID)
    #header
      a(href='/')
        img#logo(src='/static/img/logo.png')
      a(href='https://twitter.com/codefirefox', target='_blank')
        img#follow-on-twitter(src='/static/img/follow-on-twitter.png')
      #navbar
        ul
          li
            a#navbar-videos(href='/') Videos
          li
            a#navbar-cheatsheet(href='/cheatsheet') Cheatsheet
          li
            a#navbar-about(href='/about') About
      block header

    #page
      h1#mainTitle= mainTitle
      #mainContent
        block mainContent

    #footer
      ul.navigation
        li
          a(href='/') Videos
        li
          a(href='/cheatsheet') Cheatsheet
        li
          a(href='/about') About
      ul.social
        li
          a(href='https://twitter.com/codefirefox')
            i(class='fa fa-twitter fa-2x')
        li
          a(href='http://github.com/bbondy/codefirefox')
            i(class='fa fa-github fa-2x')
        li
          a(href='http://www.youtube.com/user/bbondy/videos')
            i(class='fa fa-youtube-square fa-2x')

    script(type='text/javascript', src='/static/js/jquery.js')
    script(type='text/javascript', src='/static/js/main.js')
    script(type='text/javascript', src='/static/js/analytics.js')
