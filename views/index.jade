extends layout

block header
  #legend
    ul
      if session.email
        li
          #watched-legend-item.legend-item
          span= userVideosWatched.length
          |  Watched
      li
        #unwatched-legend-item.legend-item
        span= stats.available - userVideosWatched.length
        if session.email
          |  Unwatched
        else
          |  Available
      li
        #unavailable-legend-item.legend-item
        span= stats.unavailable
        |  Coming Soon

block mainContent
  each category in categories
    .card-container
      a(name= category.slug)
      h1= category.title
      ul.videos
        each video in category.videos
            li
              if video.youtubeid
                a(href= '/' + category.slug + '/' + video.slug, name= category.slug + '/' + video.slug)
                  if video.watched
                    span.watched= video.title
                  else
                    span= video.title
              else
                  span= video.title

