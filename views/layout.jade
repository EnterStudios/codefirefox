doctype 5
html(lang="en")
  head
    if pageTitle
      title= pageTitle + ' - Code Firefox'
    else
      title Code Firefox
    meta(charset='UTF-8')
    meta(http-equiv='Content-Language', content='en')
    meta(name='description', content='Short, step by step, video tutorials for Firefox development')
    link(rel='alternate', type='application/rss+xml', title='RSS' href='/rss')
    link(rel='shortcut icon' href='/static/img/favicon.ico')
    link(rel='stylesheet', type='text/css', href='/static/css/main.css')
    link(rel='stylesheet', type='text/css', href='/static/css/persona-buttons.css')
    link(href='//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.css', rel='stylesheet')
    link(href='//mozorg.cdn.mozilla.net/media/css/tabzilla-min.css', rel='stylesheet')

    script(src='/static/js/require.js' data-main='/static/js/build/app')
    block extraHead

  body(id= bodyID)
    #notify-bar
      i(class='fa fa-info-circle')
      span Login for advanced functionality like tracking watched videos!
      a#boxclose.boxclose

    #page-container
      script.
        var email="#{session.email}";
        var isAdmin = #{session.isAdmin};

      .wrapper
        #header
          a(href='/')
            img#logo(src='/static/img/logo.png')

          a#tabzilla(href='/en-US/', id='tabzilla') mozilla
          #navbar
            ul
              li
                a#navbar-lessons(href='/') All
              li
                a#navbar-firefox(href='/tagged/Firefox') Firefox
              li
                a#navbar-firefox-os(href='/tagged/FirefoxOS') Firefox OS
              li
                a#navbar-cheatsheet(href='/cheatsheet') Cheatsheet
              if session.email
                li
                  a#navbar-profile(href='/profile') Profile

          span.persona-buttons
            if session.email
              a#logout(class='persona-button', href='#')
                span Logout
            else
              a#login(class='persona-button', href='#')
                span Login



          block header

        #page
          #mainContent
            h1#mainTitle= mainTitle
            block mainContent
        .push

      #footer
        ul.navigation
          li
            a(href='/') Lessons
          li
            a(href='/cheatsheet') Cheatsheet
          if session.email
            li
              a(href='/profile') Profile
          li
            a(href='/tags') Tags
          li
            a(href='/about') About
          if session.isAdmin && session.email
            li
              a(href='/admin') Admin
        ul.social
          li
            a(href='https://twitter.com/codefirefox')
              i(class='fa fa-twitter fa-2x')
          li
            a(href='/rss')
              i(class='fa fa-rss fa-2x')
          li
            a(href='http://github.com/bbondy/codefirefox', title='Follow @codefirefox for new content updates')
              i(class='fa fa-github fa-2x')
          li
            a(href='http://www.youtube.com/user/bbondy/videos')
              i(class='fa fa-youtube-square fa-2x')

      block extraScripts
